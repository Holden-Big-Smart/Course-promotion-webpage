<!DOCTYPE html>
<html>
<head>
    <title>后台管理面板</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen">
    <nav class="bg-gray-800 text-white p-4 flex justify-between items-center sticky top-0 z-50">
        <span class="font-bold text-xl">课程管理后台</span>
        <div>
            <span class="mr-4">欢迎, <%= user %></span>
            <a href="/" target="_blank" class="mr-4 hover:text-gray-300">查看前台</a>
            <a href="/admin/logout" class="bg-red-500 px-3 py-1 rounded text-sm hover:bg-red-600">退出</a>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto p-6 grid grid-cols-1 lg:grid-cols-4 gap-8">
        
        <div class="bg-white p-6 rounded shadow h-fit lg:col-span-1">
            <h3 class="text-xl font-bold mb-4 border-b pb-2 text-purple-700">1. 分类标签管理</h3>
            
            <form action="/admin/category/add" method="POST" class="mb-6 flex gap-2">
                <input type="text" name="name" placeholder="新标签(如:美术)" class="w-full border rounded p-2 text-sm" required>
                <button type="submit" class="bg-purple-600 text-white px-3 rounded hover:bg-purple-700 text-sm">添加</button>
            </form>

            <ul class="space-y-2 max-h-60 overflow-y-auto">
                <% if(categories.length === 0) { %>
                    <li class="text-gray-400 text-sm">暂无分类，请添加</li>
                <% } %>

                <% categories.forEach(cat => { %>
                <li class="flex justify-between items-center bg-gray-50 p-2 rounded border">
                    <span class="text-gray-700"><%= cat.name %></span>
                    <a href="/admin/category/delete/<%= cat._id %>" class="text-red-500 hover:text-red-700 text-xs font-bold">X</a>
                </li>
                <% }) %>
            </ul>
        </div>

        <div class="bg-white p-6 rounded shadow h-fit lg:col-span-1">
            <h3 class="text-xl font-bold mb-4 border-b pb-2 text-green-700">2. 发布新课程</h3>
            <form action="/admin/course/add" method="POST" enctype="multipart/form-data" class="space-y-4">
                
                <div>
                    <label class="block text-sm font-medium">课程名称</label>
                    <input type="text" name="title" class="w-full border rounded p-2" required>
                </div>

                <div class="grid grid-cols-2 gap-2">
                    <div>
                        <label class="block text-sm font-medium">价格 (HK$)</label>
                        <input type="number" name="price" class="w-full border rounded p-2" required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium">分类标签</label>
                        <select name="category" class="w-full border rounded p-2" required>
                            <option value="" disabled selected>请选择...</option>
                            <% categories.forEach(cat => { %>
                                <option value="<%= cat.name %>"><%= cat.name %></option>
                            <% }) %>
                        </select>
                        <% if(categories.length === 0) { %>
                           <p class="text-xs text-red-500 mt-1">请先在左侧添加分类!</p>
                        <% } %>
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-2">
                    <div>
                        <label class="block text-sm font-medium">开课时间</label>
                        <input type="date" name="startTime" class="w-full border rounded p-2" required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium">结课时间</label>
                        <input type="date" name="endTime" class="w-full border rounded p-2" required>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium mb-2">上课时间 (可多选)</label>
                    <div class="grid grid-cols-2 gap-y-2 gap-x-1 text-sm">
                        <label class="flex items-center space-x-2">
                            <input type="checkbox" name="weekDay" value="星期一" class="text-green-600 rounded"><span>星期一</span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input type="checkbox" name="weekDay" value="星期二" class="text-green-600 rounded"><span>星期二</span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input type="checkbox" name="weekDay" value="星期三" class="text-green-600 rounded"><span>星期三</span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input type="checkbox" name="weekDay" value="星期四" class="text-green-600 rounded"><span>星期四</span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input type="checkbox" name="weekDay" value="星期五" class="text-green-600 rounded"><span>星期五</span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input type="checkbox" name="weekDay" value="星期六" class="text-green-600 rounded"><span>星期六</span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input type="checkbox" name="weekDay" value="星期日" class="text-green-600 rounded"><span>星期日</span>
                        </label>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium">课程简介</label>
                    <textarea name="description" rows="2" class="w-full border rounded p-2"></textarea>
                </div>

                <div>
                    <label class="block text-sm font-medium">课程封面图</label>
                    <input type="file" name="image" accept="image/*" class="w-full border rounded p-2 bg-gray-50" required>
                </div>

                <button type="submit" class="w-full bg-green-600 text-white py-2 rounded hover:bg-green-700 font-bold shadow-md">发布课程</button>
            </form>
        </div>

        <div class="bg-white p-6 rounded shadow lg:col-span-2">
            <h3 class="text-xl font-bold mb-4 border-b pb-2 text-gray-700">3. 已发布课程 (<%= courses.length %>)</h3>
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-100">
                        <tr>
                            <th class="px-3 py-3">图片</th>
                            <th class="px-3 py-3">详情</th>
                            <th class="px-3 py-3 w-20">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% courses.forEach(course => { %>
                        <tr class="bg-white border-b hover:bg-gray-50">
                            <td class="px-3 py-2 w-20">
                                <img src="<%= course.image %>" class="w-16 h-12 object-cover rounded border">
                            </td>
                            <td class="px-3 py-2">
                                <div class="font-bold text-gray-900 text-base"><%= course.title %></div>
                                <div class="flex items-center gap-2 mt-1">
                                    <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2 py-0.5 rounded">
                                        <%= course.category %>
                                    </span>
                                    <span class="text-red-600 font-bold">HK$<%= course.price %></span>
                                </div>
                                <div class="text-xs text-gray-500 mt-1">
                                    📅 <%= course.startTime %> 至 <%= course.endTime %> | <%= course.weekDay %>
                                </div>
                            </td>
                            <td class="px-3 py-2">
                                <a href="/admin/course/delete/<%= course._id %>" onclick="return confirm('确定要删除课程：<%= course.title %> 吗？')" class="text-white bg-red-500 hover:bg-red-600 px-3 py-1 rounded text-xs">
                                    删除
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>